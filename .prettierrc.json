{
  "trailingComma": "es5",
  "tabWidth": 4,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "semi": false,
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": "*.yaml",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
